{
    "manifest_version": 2,
    "name": "MKKP Hoax Radar",
    "version": "0.1.9",
    "description": "Kamu hírportálok feketelistája.",
    "icons": {
        "64": "icon-64.png",
        "48": "icon-48.png",
        "32": "icon-32.png",
        "16": "icon-16.png"
    },
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "js": [
                "content.js"
            ],
            "matches": [
                "*://*/*"
            ],
            "run_at": "document_start"
        }
    ],
    "applications": {
        "gecko": {
            "id": "info@mkkp.hu"
        }
    }
}